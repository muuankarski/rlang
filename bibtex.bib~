@article{vanhuysse_pensioner_2004,
	title = {The Pensioner Booms in {Post-Communist} Hungary and Poland:
Political Sociology Perspectives},
	volume = {24},
	abstract = {This article starts out by documenting the massive scale of early and
disability retirement in Hungary and Poland during the first seven
years of the post-communist transition.1 I then explore a number of al-
ternative explanations for these ‘post-communist pensioner booms.’ I
first discuss some leading theoretical paradigms in the political sociol-
ogy of welfare states in advanced industrial democracies, such as
logic-of-industrialism, working-class-strength, pluralist and ‘new
politics’ perspectives. I argue that for different reasons, these perspec-
tives cannot satisfactorily account for post-communist pensions devel-
opments in Hungary and Poland between 1989 and 1996. Next I
review the argument that non-intentional or ‘non-political’ policymak-
ing was the cause of the pensioner booms. I indicate that this perspec-
tive is hard to square both with the early legislative efforts by the
Hungarian and Polish governments and parliaments and with the sub-
sequent numerical and financial growth of the pension systems. I con-
clude by briefly suggesting that further progress in understanding
these developments could be made by a greater focus on the strategic
motives and political benefits of the policies allowing hundreds of
thousands of working-age individuals to go on early and abnormal re-
tirement.},
	number = {1/2},
	journal = {International Journal of Sociology and Social Policy},
	author = {Pieter Vanhuysse},
	year = {2004}
