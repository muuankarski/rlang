@article{verhoeven_losers_2009,
	title = {Losers in Market Transition: The Unemployed, the Retired, and the Disabled},
	volume = {25},
	shorttitle = {Losers in Market Transition},
	url = {http://esr.oxfordjournals.org/cgi/content/abstract/25/1/103},
	doi = {10.1093/esr/jcn037},
	abstract = {The market transition debate is almost primarily focused on the winners' and on what happens to the formerly privileged during the market transformation process in {post-Communist} societies. This study emphasizes the impact of the market transformation process on the income of those who have few resources and are eligible for social benefits. Are these people the real' losers of the market transformation process in {post-Communist} societies? {OLS} regression models are estimated based on 50 standardized cross-sectional surveys on the Czech Republic, Hungary, Poland, Russia, and Slovakia covering a period from 1991 to 2002. The analyses show that the unemployed have the lowest income and that the income of retirement and disability pensioners is relatively protected, especially during the early transformation years. Education seems to be a helpful resource for the unemployed and pensioners, but not specifically during the turbulent early transformation years. Results on the income effect of urban residence are inconclusive.},
	number = {1},
	journal = {Eur Sociol Rev},
	author = {{Willem-Jan} Verhoeven and Wim Jansen and Jos Dessens},
	month = feb,
	year = {2009},
	pages = {103--122}
